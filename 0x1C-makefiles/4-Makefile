CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
%.o: %.c
	$(CC) $(CFLAGS) -C $< -O $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)
	
fclean: clean oclean

re: fclean all
.PHONY: all clean oclean fclean re
